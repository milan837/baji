<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/offered_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are accepting the bhaji challenge of Milan shrestha"
            android:fontFamily="@font/semibold"
            android:textSize="16dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/offered_team"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FC Barcelona"
            android:fontFamily="@font/semibold"
            android:textSize="14dp"
            android:textColor="@color/green"
            />

        <TextView
            android:id="@+id/offered_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 10"
            android:fontFamily="@font/semibold"
            android:textSize="14dp"
            android:textColor="@color/appColor1"
            />

    </LinearLayout>


    <!-- dash border -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/dash_line"
        android:layerType="software"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You are putting baji on"
            android:fontFamily="@font/semibold"
            android:textSize="16dp"
            android:textColor="#000"
            />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your team"
            android:fontFamily="@font/medium"
            android:textSize="14dp"
            android:textColor="#000"
            />

        <TextView
            android:id="@+id/selected_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FC Barcelona"
            android:fontFamily="@font/semibold"
            android:textSize="16dp"
            android:textColor="@color/green"
            />

        <TextView
            android:id="@+id/selected_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="$ 10"
            android:fontFamily="@font/semibold"
            android:textSize="16dp"
            android:textColor="@color/appColor1"
            />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You will wine the bhaji if your team win the match"
            android:fontFamily="@font/medium"
            android:textSize="12dp"
            android:textColor="@color/gray"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/next_button"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="8dp"
        android:elevation="2dp"
        android:background="@drawable/button_with_orange_pr_bg">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#FFF"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/bold"
            android:textSize="18dp"/>

        <ImageView
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>


</LinearLayout>