<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        app:cardCornerRadius="8dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="6dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/user_image"
                android:src="@raw/profile_pic"/>

            <LinearLayout
                android:layout_toRightOf="@+id/user_image"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/username"
                        android:textSize="12dp"
                        android:text="Milan Shrestha"
                        android:textColor="#000"
                        android:fontFamily="@font/bold"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:text="offers you an open baji"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/medium"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/team_name"
                        android:textSize="12dp"
                        android:text="Fc Barcelona"
                        android:textColor="@color/green"
                        android:fontFamily="@font/semibold"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/baji_amount"
                        android:layout_below="@id/team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="$20"
                        android:textColor="@color/appColor1"
                        android:fontFamily="@font/semibold"/>

                    <Button
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:elevation="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:id="@+id/baji_now_button"
                        android:text="Accept Baji"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:fontFamily="@font/semibold"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFF"
                        android:background="@drawable/green_button"
                        />

                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>