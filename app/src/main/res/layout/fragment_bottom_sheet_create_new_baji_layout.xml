<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bottom_sheet_white_bg"
    android:padding="10dp">

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new bhaji pool"
        android:fontFamily="@font/semibold"
        android:textSize="16dp"
        android:textColor="#000"
        />

    <TextView
        android:layout_marginTop="3dp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You will wine the bhaji if your team win the match"
        android:fontFamily="@font/medium"
        android:textSize="12dp"
        />

    <!-- dash border -->
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/dash_line"
        android:layerType="software"
        />

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your team"
        android:fontFamily="@font/semibold"
        android:textSize="14dp"
        android:textColor="#000"
        />

    <RadioGroup
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teamRadioGroup">

        <RadioButton
            android:id="@+id/team_one"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/medium"
            android:text="FC Barcelona"/>

        <RadioButton
            android:id="@+id/team_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:fontFamily="@font/medium"
            android:text="Real Madrid FC"/>


    </RadioGroup>

    <TextView
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the amount"
        android:fontFamily="@font/semibold"
        android:textSize="14dp"
        android:textColor="#000"
        />

    <Spinner
        android:id="@+id/amount_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/button_with_orange_pr_bg"/>


    <RelativeLayout
        android:id="@+id/next_button"
        android:layout_margin="24dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="8dp"
        android:elevation="2dp"
        android:background="@drawable/button_with_orange_pr_bg">

        <TextView
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textColor="#FFF"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/bold"
            android:textSize="18dp"/>

        <ImageView
            android:layout_marginRight="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_forward_black_24dp"
            android:layout_gravity="center_horizontal"/>

    </RelativeLayout>



</LinearLayout>