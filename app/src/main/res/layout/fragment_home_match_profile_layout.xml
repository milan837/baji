<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background_cutter_layout">

    </RelativeLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:background="@android:color/transparent"
        android:theme="@style/AppTheme.NoActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/collapsing_tool_bar_layout"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

         <LinearLayout
             android:paddingTop="20dp"
             android:id="@+id/container_layout"
           app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- tool bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/toolbar"
                app:layout_collapseMode="parallax">

                <!-- back button-->
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/back_button"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@raw/back_arrow"/>

                </RelativeLayout>

                <!-- middle title names -->
                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/game_title_name"
                        android:textSize="18dp"
                        android:text="Premmier League"
                        android:textColor="#FFF"
                        android:fontFamily="@font/semibold"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_matches_list"
                        android:textSize="14dp"
                        android:text="12 Matches"
                        android:textColor="#FFF"
                        android:fontFamily="@font/medium"/>

                </LinearLayout>

                <!-- notication button-->
                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/notification_icon"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@raw/notification"/>

                </RelativeLayout>


            </RelativeLayout>

            <!-- match details Layout -->
            <androidx.cardview.widget.CardView
                app:layout_collapseMode="parallax"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#000"
                app:cardCornerRadius="8dp"
                app:cardElevation="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/matches_date"
                    android:fontFamily="@font/semibold"
                    android:textSize="16dp"
                    android:text="11 Augest 2019"
                    android:textColor="@color/appColor1" />

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/match_studium"
                    android:fontFamily="@font/medium"
                    android:textSize="10dp"
                    android:text="Camp Nou Stadium"
                    android:textColor="@color/textColor" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- team one details -->

                    <LinearLayout
                        android:paddingLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@raw/teamone"
                            android:id="@+id/team_one_image"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/team_one_name"
                            android:fontFamily="@font/semibold"
                            android:textSize="12dp"
                            android:text="FC Barcelona"
                            android:textColor="@color/textColor" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/semibold"
                            android:textSize="20dp"
                            android:text="VS"
                            android:textColor="@color/appColor1" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/matches_time"
                            android:fontFamily="@font/semibold"
                            android:textSize="12dp"
                            android:text="11:30 PM"
                            android:textColor="@color/textColor" />

                    </LinearLayout>

                    <!-- team two details -->
                    <LinearLayout
                        android:paddingRight="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@raw/teamtwo"
                            android:id="@+id/team_two_image"/>

                        <TextView
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/team_two_name"
                            android:fontFamily="@font/semibold"
                            android:textSize="12dp"
                            android:text="Real Madrid C.F."
                            android:textColor="@color/textColor" />

                    </LinearLayout>

                </LinearLayout>


                <!-- dash border -->
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="@drawable/dash_line"
                    android:layerType="software"
                    />

                <RelativeLayout
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/total_baji"
                        android:fontFamily="@font/semibold"
                        android:textSize="12dp"
                        android:text="Total Baji : 20"
                        android:textColor="@color/green" />

                    <Button
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:elevation="3dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:id="@+id/baji_now_button"
                        android:text="Baji Now"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:fontFamily="@font/semibold"
                        android:layout_marginBottom="10dp"
                        android:textColor="#FFF"
                        android:background="@drawable/green_button"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        </LinearLayout>




        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

<LinearLayout
    android:paddingTop="14dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- tab layout and view pager -->
    <com.google.android.material.tabs.TabLayout
        android:layout_below="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/tablayout"
        app:tabSelectedTextColor="#000"
        app:tabTextColor="@color/gray"
        android:layout_gravity="bottom"
        app:tabTextAppearance="@style/tab_text"
        app:tabIndicatorColor="#000"
        app:tabPaddingStart="10dp"
        app:tabPaddingEnd="10dp"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/viewPager">

    </androidx.viewpager.widget.ViewPager>

</LinearLayout>




</androidx.coordinatorlayout.widget.CoordinatorLayout>